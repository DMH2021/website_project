{% extends "layout.jinja2" %}
{% block body %}
<div class = "container">
    <div class="jumbotron">
        <!-- Page Content -->
        <h1>Message Board</h1>
        <p> Here are some messages</p>
        <hr/>
        {%  for message in messages %}
        <blockquote class="blockquote">
             <p class="mb-0">
                 {{ message[1] }} <a href = "like.jinja2?rowid={{ message[3] }}" class ="btn btn-outline-primary">
                 <i class="far fa-thumbs-up"> + {{ message[2] }}</i></a>
             </p>
             <footer class="blockquote-footer">
                 {{ message[0] }}
             </footer>
        </blockquote>
        {% endfor %}
    </div>
    </hr>
        <form action = "new_messages.jinja2" method = "POST">
            <div class="form-group">
                <label>Message:</label><br>
                    <input type="text" class="form_control" name="messages">
            </div>
            <div class="form-group">
                <label >Author:</label>
                <input type="text" class="form-control" name="author" placeholder="anonymous">
            </div>
            <input type="submit" value="Submit">
        </form>
    </div>
</div>
{% endblock %}