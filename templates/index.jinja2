{% extends "layout.jinja2" %}
{% block body %}
<div class = "container">
    <div>
        <!-- Page Content -->
        <h1>Message Board</h1>
        <p> Here are some messages</p>
        <hr/>
        <ul>
            {%  for message in messages %}
                <li> [{{ message[0] }}] says {{ message[1] }} </li>
            {%  endfor %}
        </ul>
        <form action = "new_messages.jinja2" method = "POST">
            <div class="form-group">
                <label>Message:</label><br>
                    <input type="text" class="form_control" name="messages">
            </div>
            <div class="form-group">
                <label >Author:</label>
                <input type="text" class="form-control" name="author" placeholder="anonymous">
            </div>
            <input type="submit" value="Submit">
        </form>
    </div>
</div>
{% endblock %}