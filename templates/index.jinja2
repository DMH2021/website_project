{% extends "layout.jinja2" %}
{% block body %}
<div class = "container">
    <div class="jumbotron">
        <!-- Page Content -->
        <h1>Local Weather Report</h1>
        <p class="lead"> It looks like {{ weather_description }} outside</p>
        <h3><i class="fas fa-temperature-high {{ temperature_style }}"></i> {{ temperature }}</h3>
        <h1>Message Board</h1>
        <p class="lead"> Here are some messages</p>
    <link rel="stylesheet" href="static/custom.css">
    {%  for location in msg_locations %}
        <img class="state-flag" src="http://flags.ox3.in/svg/{{ location[0] }}.svg">
    {% endfor %}
        <hr/>
        {%  for message in messages %}
        <blockquote class="blockquote">
             <p class="mb-0">
                 {{ message[1] }} <a href = "like.jinja2?rowid={{ message[3] }}" class ="btn btn-outline-primary">
                 <i class="far fa-thumbs-up"> + {{ message[2] }}</i></a>
             </p>
             <footer class="blockquote-footer">
                 {{ message[0] }}
             </footer>
        </blockquote>
        {% endfor %}
    </div>
    </hr>
        <form action = "new_messages.jinja2" method = "POST">
            <div class="form-group">
                <label>Message:</label><br>
                    <input type="text" class="form_control" name="messages">
            </div>
            <div class="form-group">
                <label >Author:</label>
                <input type="text" class="form-control" name="author" placeholder="anonymous">
            </div>
            <input type="submit" value="Submit">
        </form>
    </div>
</div>
{% endblock %}